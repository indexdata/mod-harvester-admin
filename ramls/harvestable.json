{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Configuration for a harvest job",
  "type": "object",
  "properties": {
    "harvestable": {
      "type": "object",
      "description": "Configuration for a harvest job",
      "oneOf": [
        {
          "properties": {
            "xmlBulk": {
              "type": "object",
              "description": "An XML/MARC bulk harvest job",
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "properties": {
            "oaiPmh": {
              "type": "object",
              "description": "An OAI-PMH harvest job",
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    }
  }
}